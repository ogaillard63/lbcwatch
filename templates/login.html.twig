<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Connexion - LBC Watch 2</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            font-family: 'Outfit', sans-serif;
            background-color: #0f172a;
            color: #f1f5f9;
            overflow: hidden;
        }
        .glass-card {
            background: rgba(30, 41, 59, 0.7);
            backdrop-filter: blur(16px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        }
        .gradient-text {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .key-btn {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.05);
            transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .key-btn:active {
            transform: scale(0.92);
            background: rgba(255, 255, 255, 0.1);
            border-color: rgba(99, 102, 241, 0.5);
        }
        .dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }
        .dot.active {
            background: #6366f1;
            box-shadow: 0 0 15px rgba(99, 102, 241, 0.6);
            border-color: #818cf8;
            transform: scale(1.2);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="glass-card w-full max-w-sm p-8 rounded-[2.5rem] relative overflow-hidden">
        <!-- Background decorative elements -->
        <div class="absolute -top-24 -right-24 w-48 h-48 bg-indigo-600/10 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-purple-600/10 rounded-full blur-3xl"></div>

        <div class="relative z-10 text-center mb-8">
            <h1 class="text-2xl font-bold text-white mb-1">LBC Watch</h1>
        </div>

        {% if error %}
        <div class="bg-red-500/10 border border-red-500/50 text-red-400 p-3 rounded-2xl mb-6 text-sm text-center animate-bounce">
            {{ error }}
        </div>
        {% endif %}

        <form action="index.php?action=login" method="POST" id="loginForm">
            <input type="hidden" name="password" id="passwordField">
            
            <!-- Code Display -->
            <div class="flex justify-center space-x-4 mb-10" id="dotsContainer">
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
                <div class="dot"></div>
            </div>

            <!-- Keypad -->
            <div class="grid grid-cols-3 gap-4 {% if blocked %}opacity-20 pointer-events-none{% endif %}">
                {% for i in 1..9 %}
                <button type="button" class="key-btn h-16 rounded-2xl text-xl font-semibold text-white/90 hover:bg-white/5" onclick="addNumber('{{ i }}')">
                    {{ i }}
                </button>
                {% endfor %}
                <button type="button" class="key-btn h-16 rounded-2xl text-red-400/80 text-sm font-medium hover:bg-red-500/5" onclick="clearCode()">
                    Effacer
                </button>
                <button type="button" class="key-btn h-16 rounded-2xl text-xl font-semibold text-white/90 hover:bg-white/5" onclick="addNumber('0')">
                    0
                </button>
                <button type="button" class="key-btn h-16 rounded-2xl text-indigo-400 hover:bg-indigo-500/5" onclick="deleteLast()">
                    <i class="bi bi-backspace"></i>
                </button>
            </div>

        </form>
    </div>

    <script>
        const passwordField = document.getElementById('passwordField');
        const dots = document.querySelectorAll('.dot');
        const form = document.getElementById('loginForm');
        const isBlocked = {{ blocked ? 'true' : 'false' }};

        function addNumber(num) {
            if (isBlocked) return;
            if (passwordField.value.length < 4) {
                passwordField.value += num;
                updateDots();
                
                // Auto submit if 4 digits
                if (passwordField.value.length === 4) {
                    setTimeout(() => form.submit(), 200);
                }
            }
        }

        function deleteLast() {
            if (isBlocked) return;
            passwordField.value = passwordField.value.slice(0, -1);
            updateDots();
        }

        function clearCode() {
            if (isBlocked) return;
            passwordField.value = '';
            updateDots();
        }

        function updateDots() {
            const length = passwordField.value.length;
            dots.forEach((dot, index) => {
                if (index < length) {
                    dot.classList.add('active');
                } else {
                    dot.classList.remove('active');
                }
            });
        }
        
        // Listen to keyboard
        document.addEventListener('keydown', (e) => {
            if (isBlocked) return;
            if (e.key >= '0' && e.key <= '9') {
                addNumber(e.key);
            } else if (e.key === 'Backspace') {
                deleteLast();
            } else if (e.key === 'Enter') {
                if (passwordField.value.length === 4) {
                    form.submit();
                }
            } else if (e.key === 'Escape') {
                clearCode();
            }
        });
    </script>
</body>
</html>
