{% extends 'layout.html.twig' %}

{% block title %}Annonces archivées{% endblock %}

{% block content %}
<!-- Search Bar -->
<div class="mb-6">
    <div class="relative max-w-2xl">
        <i class="bi bi-search absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 text-lg"></i>
        <input 
            type="text" 
            id="searchInput" 
            placeholder="Rechercher par titre, localisation ou prix..." 
            class="w-full bg-slate-800/50 border border-slate-700 rounded-xl pl-12 pr-4 py-3 focus:outline-none focus:border-indigo-500 text-white placeholder-slate-500 transition-all"
            oninput="filterAds()"
        >
        <button 
            id="clearSearch" 
            onclick="clearSearch()" 
            class="absolute right-3 top-1/2 -translate-y-1/2 text-slate-400 hover:text-white transition-all hidden"
        >
            <i class="bi bi-x-circle-fill text-xl"></i>
        </button>
    </div>
    <p id="searchResults" class="text-sm text-slate-400 mt-2 hidden">
        <span id="resultCount"></span>
    </p>
</div>

<!-- Search Filters -->
<div class="mb-8 flex flex-wrap gap-2">
    <a href="index.php?action=archives" 
       class="px-4 py-2 rounded-xl text-sm font-semibold transition-all shadow-sm border {% if not current_search_id %}bg-indigo-600 text-white border-indigo-600 shadow-indigo-600/20{% else %}bg-slate-800/50 text-slate-400 border-slate-700 hover:border-slate-500{% endif %}">
        Toutes les recherches
    </a>
    {% for s in searches %}
    <a href="index.php?action=archives&search_id={{ s.id }}" 
       class="px-4 py-2 rounded-xl text-sm font-semibold transition-all shadow-sm border {% if current_search_id == s.id %}bg-indigo-600 text-white border-indigo-600 shadow-indigo-100/20{% else %}bg-slate-800/50 text-slate-400 border-slate-700 hover:border-slate-500{% endif %}">
        {{ s.name }}
    </a>
    {% endfor %}
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for ad in ads %}
    <div class="ad-card glass-card rounded-2xl overflow-hidden group hover:scale-[1.02] transition-all duration-300 opacity-75">
        <a href="{{ ad.url }}" target="_blank" class="block relative h-48 overflow-hidden">
            {% if ad.image_url %}
            <img src="{{ ad.image_url }}" alt="{{ ad.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500">
            {% else %}
            <div class="w-full h-full bg-slate-800 flex items-center justify-center">
                <i class="bi bi-image text-slate-600 text-4xl"></i>
            </div>
            {% endif %}
            
            <!-- Favorite Star -->
            <button onclick="event.preventDefault(); toggleFavorite({{ ad.id }}, this)" 
                    class="absolute top-4 left-4 z-10 transition-all duration-300 drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)] {% if ad.is_favorite %}text-yellow-400 opacity-100{% else %}text-white opacity-0 group-hover:opacity-60 hover:!opacity-100{% endif %}"
                    title="Favoris">
                <i class="bi {{ ad.is_favorite ? 'bi-star-fill' : 'bi-star' }} text-2xl"></i>
            </button>

            <!-- Archive Badge -->
            <div class="absolute top-4 right-4 bg-gradient-to-r from-orange-500 to-amber-500 text-white px-3 py-1 rounded-full text-xs font-bold shadow-lg shadow-orange-500/50 flex items-center space-x-1">
                <i class="bi bi-archive-fill"></i>
                <span>Archivée</span>
            </div>

            <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-slate-900 to-transparent">
                <span class="text-xs font-semibold px-2 py-1 bg-slate-800 rounded-md text-slate-300 uppercase tracking-wider">
                    {{ ad.search_name }}
                </span>
            </div>
        </a>
        
        <div class="p-5">
            <h3 class="font-bold text-lg line-clamp-2 mb-2 h-14" title="{{ ad.title }}">{{ ad.title }}</h3>
            
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center text-slate-400 text-sm space-x-4">
                    <span class="flex items-center space-x-1">
                        <i class="bi bi-geo-alt"></i>
                        <span>{{ ad.location }}</span>
                    </span>
                    {% if ad.surface %}
                    <span class="flex items-center space-x-1">
                        <i class="bi bi-aspect-ratio"></i>
                        <span>{{ ad.surface }} m²</span>
                    </span>
                    {% endif %}
                </div>
            </div>

            <div class="text-2xl font-bold text-indigo-400 mb-4">
                {{ ad.price|number_format(0, ',', ' ') }} €
            </div>

            <div class="flex space-x-2 mt-4">
                <a href="{{ ad.url }}" target="_blank" class="flex-1 bg-slate-800 hover:bg-slate-700 text-white py-2 rounded-xl text-center font-bold transition-all flex items-center justify-center space-x-2">
                    <i class="bi bi-box-arrow-up-right"></i>
                    <span>Voir l'annonce</span>
                </a>
            </div>
            <p class="text-xs text-white mt-3 text-right opacity-70 font-medium">{{ ad.scraped_at|date('d/m/Y H:i') }}</p>
        </div>
    </div>
    {% else %}
    <div class="col-span-full py-20 text-center">
        <div class="bg-slate-800/20 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 border border-slate-700">
            <i class="bi bi-archive text-4xl text-slate-600"></i>
        </div>
        
        <h3 class="text-xl font-bold mb-2">Aucune annonce archivée</h3>
        <p class="text-slate-400">Les annonces que vous marquez comme vues apparaîtront ici.</p>
    </div>
    {% endfor %}
</div>

<script>
    function filterAds() {
        const searchInput = document.getElementById('searchInput');
        const clearBtn = document.getElementById('clearSearch');
        const searchResults = document.getElementById('searchResults');
        const resultCount = document.getElementById('resultCount');
        const query = searchInput.value.toLowerCase().trim();
        
        // Show/hide clear button
        if (query.length > 0) {
            clearBtn.classList.remove('hidden');
        } else {
            clearBtn.classList.add('hidden');
            searchResults.classList.add('hidden');
        }
        
        // Get all ad cards
        const adCards = document.querySelectorAll('.ad-card');
        let visibleCount = 0;
        
        adCards.forEach(card => {
            const title = card.querySelector('h3').textContent.toLowerCase();
            const location = card.querySelector('.bi-geo-alt').nextElementSibling.textContent.toLowerCase();
            const price = card.querySelector('.text-2xl').textContent.toLowerCase();
            
            // Check if query matches title, location, or price
            if (title.includes(query) || location.includes(query) || price.includes(query)) {
                card.style.display = '';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });
        
        // Update result count
        if (query.length > 0) {
            searchResults.classList.remove('hidden');
            if (visibleCount === 0) {
                resultCount.innerHTML = '<i class="bi bi-exclamation-circle"></i> Aucun résultat trouvé';
                resultCount.classList.add('text-orange-400');
            } else if (visibleCount === 1) {
                resultCount.innerHTML = '<i class="bi bi-check-circle"></i> 1 annonce trouvée';
                resultCount.classList.remove('text-orange-400');
                resultCount.classList.add('text-green-400');
            } else {
                resultCount.innerHTML = `<i class="bi bi-check-circle"></i> ${visibleCount} annonces trouvées`;
                resultCount.classList.remove('text-orange-400');
                resultCount.classList.add('text-green-400');
            }
        }
    }
    
    function clearSearch() {
        const searchInput = document.getElementById('searchInput');
        const clearBtn = document.getElementById('clearSearch');
        const searchResults = document.getElementById('searchResults');
        
        searchInput.value = '';
        clearBtn.classList.add('hidden');
        searchResults.classList.add('hidden');
        
        // Show all cards
        const adCards = document.querySelectorAll('.ad-card');
        adCards.forEach(card => {
            card.style.display = '';
        });
    }
</script>
{% endblock %}
