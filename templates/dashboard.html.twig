{% extends 'layout.html.twig' %}

{% block title %}Dernières annonces{% endblock %}

{% block content %}
<!-- Search Filters -->
<div class="mb-8 flex flex-wrap gap-2">
    <a href="index.php?action=dashboard" 
       class="px-4 py-2 rounded-xl text-sm font-semibold transition-all shadow-sm border {% if not current_search_id %}bg-indigo-600 text-white border-indigo-600 shadow-indigo-600/20{% else %}bg-slate-800/50 text-slate-400 border-slate-700 hover:border-slate-500{% endif %}">
        Toutes les recherches
    </a>
    {% for s in searches %}
    <a href="index.php?action=dashboard&search_id={{ s.id }}" 
       class="px-4 py-2 rounded-xl text-sm font-semibold transition-all shadow-sm border {% if current_search_id == s.id %}bg-indigo-600 text-white border-indigo-600 shadow-indigo-100/20{% else %}bg-slate-800/50 text-slate-400 border-slate-700 hover:border-slate-500{% endif %}">
        {{ s.name }}
    </a>
    {% endfor %}
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for ad in ads %}
    <div class="ad-card glass-card rounded-2xl overflow-hidden group hover:scale-[1.02] transition-all duration-300 {{ ad.is_seen ? 'opacity-50' : '' }}">
        <a href="{{ ad.url }}" target="_blank" class="block relative h-48 overflow-hidden">
            {% if ad.image_url %}
            <img src="{{ ad.image_url }}" alt="{{ ad.title }}" class="w-full h-full object-cover group-hover:scale-110 transition-all duration-500">
            {% else %}
            <div class="w-full h-full bg-slate-800 flex items-center justify-center">
                <i class="bi bi-image text-slate-600 text-4xl"></i>
            </div>
            {% endif %}
            
            <!-- Favorite Star -->
            <button onclick="event.preventDefault(); toggleFavorite({{ ad.id }}, this)" 
                    class="absolute top-4 left-4 z-10 transition-all duration-300 drop-shadow-[0_2px_4px_rgba(0,0,0,0.8)] {% if ad.is_favorite %}text-yellow-400 opacity-100{% else %}text-white opacity-0 group-hover:opacity-60 hover:!opacity-100{% endif %}"
                    title="Favoris">
                <i class="bi {{ ad.is_favorite ? 'bi-star-fill' : 'bi-star' }} text-2xl"></i>
            </button>

            <div class="absolute top-4 right-4 bg-indigo-600 text-white px-3 py-1 rounded-full text-sm font-bold shadow-lg">
                {{ ad.price|number_format(0, ',', ' ') }} €
            </div>
            <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-slate-900 to-transparent">
                <span class="text-xs font-semibold px-2 py-1 bg-slate-800 rounded-md text-slate-300 uppercase tracking-wider">
                    {{ ad.search_name }}
                </span>
            </div>
        </a>
        
        <div class="p-5">
            <h3 class="font-bold text-lg line-clamp-2 mb-2 h-14" title="{{ ad.title }}">{{ ad.title }}</h3>
            
            <div class="flex items-center text-slate-400 text-sm mb-4 space-x-4">
                <span class="flex items-center space-x-1">
                    <i class="bi bi-geo-alt"></i>
                    <span>{{ ad.location }}</span>
                </span>
                {% if ad.surface %}
                <span class="flex items-center space-x-1">
                    <i class="bi bi-aspect-ratio"></i>
                    <span>{{ ad.surface }} m²</span>
                </span>
                {% endif %}
            </div>

            <div class="flex space-x-2 mt-4">
                <a href="{{ ad.url }}" target="_blank" class="flex-1 bg-slate-800 hover:bg-slate-700 text-white py-2 rounded-xl text-center font-bold transition-all flex items-center justify-center space-x-2">
                    <i class="bi bi-box-arrow-up-right"></i>
                    <span>Voir l'annonce</span>
                </a>
                
                {% if not ad.is_seen %}
                <button onclick="markAsSeen({{ ad.id }}, this)" class="w-12 bg-green-600/20 hover:bg-green-600 text-green-500 hover:text-white rounded-xl transition-all flex items-center justify-center" title="Marquer comme vu">
                    <i class="bi bi-check-lg text-xl"></i>
                </button>
                {% endif %}
            </div>
            <p class="text-xs text-white mt-3 text-right opacity-70 font-medium">{{ ad.scraped_at|date('d/m/Y H:i') }}</p>
        </div>
    </div>
    {% else %}
    <div class="col-span-full py-20 text-center">
        <div class="bg-slate-800/20 w-24 h-24 rounded-full flex items-center justify-center mx-auto mb-6 border border-slate-700">
            <i class="bi bi-binoculars text-4xl text-slate-600"></i>
        </div>
        
        {% if searches|length > 0 %}
            <h3 class="text-xl font-bold mb-2">Aucune annonce à afficher</h3>
        {% else %}
            <h3 class="text-xl font-bold mb-2">Bienvenue sur LBC Watch</h3>
            <p class="text-slate-400">Commencez par créer votre première recherche pour surveiller Leboncoin en temps réel.</p>
            <button onclick="openModal()" class="mt-8 bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-bold transition-all shadow-lg shadow-indigo-600/20 inline-flex items-center space-x-2">
                <i class="bi bi-plus-lg"></i>
                <span>Ajouter ma première recherche</span>
            </button>
        {% endif %}
    </div>
    {% endfor %}
</div>
{% endblock %}
